  body
    //- the main navbar of the site
    section.Section_Navbar
      nav.navbar.fixed-top.navbar-expand-lg.navbar-light
        .container
          //- the logo
          a.navbar-brand(href='/', role="banner")
            img(src='/images/logo.png', 
              alt='go to home', width="10%")
          //- the toggler button in small screens
          button.navbar-toggler(
              type='button', 
              data-toggle='collapse', 
              data-target='#navbarSupportedContent', 
              aria-controls='navbarSupportedContent', 
              aria-expanded='false', 
              aria-label='Toggle navigation')
            span
                i.fa.fa-bars

          //- the rest of the content
          #navbarSupportedContent.collapse.navbar-collapse
            //- language button
            ul.mr-auto
                li.nav-item
                    if language == 'ar'
                        a.lang.nav-link(href="/languages/en") english
                    else if language == 'en'
                        a.lang.nav-link(href="/languages/ar") عربى

            //- navbar items
            ul.navbar-nav
              if user
                li.nav-item
                    button(type='button' data-toggle='modal' data-target='#order')
                        if language == 'en'
                            a.prev_def.nav-link(href='#') post your request 
                        if language == 'ar'
                            a.prev_def.nav-link(href='#') أضف طلبك 
              
                li.nav-item
                    //- the ad button which is a modal
                    button(type='button' data-toggle='modal' data-target='#ad') 
                        if language == 'en'
                                a.prev_def.nav-link(href='#') post your advertising
                        else if language == 'ar'
                            a.prev_def.nav-link(href='#') أضف إعلانك

                li.nav-item.dropdown
                    a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                         if user.pro_image
                            img(src=user.pro_image, alt="", width="40px", height="40px")
                         else 
                            img(src="/images/person_profile.png", alt="profile thumbnails", width="40px", height="40px", style="border-radius: 50%")
                    .dropdown-menu(aria-labelledby='navbarDropdown')
                        if language == 'en'
                            a.dropdown-item(href=`/profile/${user.id}`) Profile
                            a.dropdown-item(href='/users/logout') log out
                        else if language == 'ar'
                            a.dropdown-item(href=`/profile/${user.id}`) الحساب الشخصى
                            a.dropdown-item(href='/users/logout') تسجيل الخروج

                li.nav-item#installApp_firefox.install.d-none.d-lg-block
                  button(type='button' data-toggle='modal' data-target='#install_firefox')
                    if language == 'en'
                        a.prev_def.nav-link(href='#', title="Install the app into your desktop") 
                            i.fa.fa-download
                    else if language == 'ar'
                        a.prev_def.nav-link(href='#', title="إضافة الموقع الى سطح المكتب لسرعة الوصول") 
                            i.fa.fa-download
                li.nav-item.install
                    button.add-button 
                        if language == 'en'
                            a.prev_def.nav-link(href='#', title="Install the app into your desktop") 
                                i.fa.fa-download
                        else if language == 'ar'
                            a.prev_def.nav-link(href='#', title="إضافة الموقع الى سطح المكتب لسرعة الوصول") 
                                i.fa.fa-download

