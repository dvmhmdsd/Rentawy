                                label(for="place1") Place
                                input#place1.form-control(type="text", name="place", placeholder="e.g: Sabe3 district")
                            input.btn(type='submit', value="Post")
                    
                    else if language == 'ar'
                        form#ord.text-right(action="/orders/add", method="POST")
                            .form-group
                                label(for="title1") عنوان طلبك
                                input#title1.form-control(type="text", name="title", placeholder="مثال: شقه للإيجار فى الحى السادس")
                            .form-group
                                label(for="content") محتوى الطلب
                                textarea#content.form-control(name="content", cols="30", rows="4", placeholder="الشقه قريبه من جامعة الأزهر و .....", style="resize: none")
