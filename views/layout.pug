                                label(for="price1") الميزانيه المتاحة
                                input#price1.form-control(type="text", name="price", placeholder="مثال: 1200 جنيه")
                            .form-group
                                label(for="place1") المكان
                                input#place1.form-control(type="text", name="place", placeholder="مثال: الحى السادس")
                            input.btn(type='submit', value="إضافه")


    //- log in modal
    #log.modal.fade(tabindex='-1' role='dialog' aria-labelledby='logLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    if language == 'en'
                        h5#logLabel.modal-title Welcome again !
                    else if langyage == 'ar'
                        h5#logLabel.modal-title أهلا من جديد
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
