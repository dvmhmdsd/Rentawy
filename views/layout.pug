    //- modals
    //- "add your ad" modal
    #ad.modal.fade(tabindex='-1' role='dialog' aria-labelledby='adLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    if language == 'en'
                        h5#adLabel.modal-title Add your advertisement
                    else if language == 'ar'
                        h5#adLabel.modal-title أضف إعلانك
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                    if language == 'en'
                        form#adv(action="/ads/add", method="POST", encType="multipart/form-data")
                            .form-group
                                label(for="title") Title
                                input#title.form-control(type="text", name="title", placeholder="e.g: Department in sabe3 district")
                            .form-group
                                label(for="description") Description
                                textarea#description.form-control(name="description", cols="30", rows="4", placeholder="e.g: Department in sabe3 district at floor 4", style="resize: none")
                            .form-group
                                label(for="price") Price
                                input#price.form-control(type="text", name="price", placeholder="e.g: 1200 L.E")
                            .form-group
                                label(for="place") Address
                                input#place.form-control(type="text", name="place", placeholder="e.g: 6th district")
                            .form-group
                                label(for="ad_images")
                                input#ad_images.form-control-file(type="file", name="ad_image", multiple)
                            input.btn(type='submit', value="Post")
                    else if language == 'ar'
                        form#adv.text-right(action="/ads/add", method="POST", encType="multipart/form-data")
                            .form-group
                                label(for="title") عنوان الإعلان
                                input#title.form-control(type="text", name="title", placeholder="مثال: شقه فى الحى السادس 3 افراد")
                            .form-group
                                label(for="description") وصف الإعلان
                                textarea#description.form-control(name="description", cols="30", rows="4", placeholder="مثال: الشقه فى الحى السادس فى الدور الرابع 3 غرف....", style="resize: none")
                            .form-group
                                label(for="price") الإيجار للشهر
                                input#price.form-control(type="text", name="price", placeholder="مثال: 1200 جنيه")
                            .form-group
                                label(for="place") المكان
                                input#place.form-control(type="text", name="place", placeholder="الحى السادس")
                            .form-group
                                label(for="ad_images") أضف صورا لإعلانك
                                input#ad_images.form-control-file(type="file", name="ad_image", multiple)
                            input.btn(type='submit', value="إضافه")

    //- "add your request" modal

    #order.modal.fade(tabindex='-1' role='dialog' aria-labelledby='orderLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
