                .modal-body
                    if language == 'en'
                        form#login(action="/users/login", method="POST", novalidate)
                            .form-group
                                label(for="email") Your Email
                                input#email.form-control(type="email", name="email", placeholder="e.g: example@example.com")
                            .form-group
                                label(for="password") Your Password
                                input#password.form-control(type="password", name="password")
                            input.btn(type='submit', value="Log In")
                            a.float-right.btn-link(href="/users/forgot") forgot password?
                    else if language == 'ar'
                        form#login.text-right(action="/users/login", method="POST", novalidate)
                            .form-group
                                label(for="email") أكتب إيميلك
                                input#email.form-control(type="email", name="email", placeholder="مثال: example@example.com")
                            .form-group
                                label(for="password") الرقم السرى
                                input#password.form-control(type="password", name="password")
                            input.float-left.btn(type='submit', value="تسجيل الدخول")
                            a.float-right.btn-link(href="/users/forgot") هل نسيت كلمة السر؟

    //- sign up modal

    #register.modal.fade(tabindex='-1' role='dialog' aria-labelledby='registerLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    if language == 'en'
                        h5#registerLabel.modal-title Welcome to our world
                    else if language == 'ar'
                        h5#registerLabel.modal-title أهلا بك فى عالمنا
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                    if language == 'en'
                        form#reg(action="/users/register", method="POST", novalidate)
                            .form-group
                                label(for="name_ar") Your Name in Arabic
                                input#name_ar.form-control(type="text", name="name_ar", placeholder="e.g: محمد عبدالله")
                            .form-group
                                label(for="name_en") Your Name in English
                                input#name_en.form-control(type="text", name="name_en", placeholder="e.g: Mohamed Abdullah")
                            .form-group
                                label(for="job") Job
                                select#job.form-control(name="job")
                                    option(value="", selected) Select your job
                                    option(value="student") Student
                                    option(value="owner") Owner
                                    option(value="worker") Worker
                            .form-group.d-none#worker
                                label(for="worker_job") Add your field
                                select#worker_job.form-control(name="worker_job")
                                    option(value="", selected) Select your job
                                    option(value="electrican") Electrican
                                    option(value="plumber") plumber
                                    option(value="carpenter") carpenter
                            .form-group
                                label(for="phone") phone
                                input#phone.form-control(type="text", name="phone", placeholder="e.g: 010232323434")
                            .form-group
                                label(for="place2") address
                                input#place2.form-control(type="text", name="place", placeholder="e.g: 6th district")
                            .form-group
                                label(for="reg-email") Your Email
                                input#reg-email.form-control(type="email", name="email", placeholder="e.g: Sabe3 district")
                            .form-group
                                label(for="reg-password") Your Password
                                input#reg-password.form-control(type="password", name="password")
                            .form-group
                                label(for="password2") Confirm Your Password
                                input#password2.form-control(type="password", name="confirm")
                            p On sign up you agree for 
                                a.btn-link(href="#", data-toggle='modal' data-target='#terms') Our Terms
                            button.btn(type='submit') Post
                    else if language == 'ar'
                        form#reg(action="/users/register", method="POST", novalidate)
                            .form-group
                                label(for="name_ar") إسمك بالعربيه
                                input#name_ar.form-control(type="text", name="name_ar", placeholder="e.g: محمد عبدالله")
                            .form-group
                                label(for="name_en") إسمك بالإنجليزيه
                                input#name_en.form-control(type="text", name="name_en", placeholder="e.g: Mohamed Abdullah")
                            .form-group
                                label(for="job") الوظيفه
                                select#job.form-control(name="job")
                                    option(value="", selected) إختر وظيفه
                                    option(value="student") طالب
                                    option(value="owner") مالك
                                    option(value="worker") عامل
                            .form-group.d-none#worker
                                label(for="worker_job") اختر مجال عملك
                                select#worker_job.form-control(name="worker_job")
                                    option(value="", selected) Select your job
                                    option(value="electrican") كهربائى
                                    option(value="plumber") سباك
                                    option(value="carpenter") نجار
                            .form-group
                                label(for="phone") رقم الهاتف
                                input#phone.form-control(type="text", name="phone", placeholder="مثال: 010232323434")
                            .form-group
                                label(for="place2") العنوان
                                input#place2.form-control(type="text", name="place", placeholder="مثال: الحى السادس")
                            .form-group
                                label(for="reg-email") إيميلك
                                input#reg-email.form-control(type="email", name="email", placeholder="مثال: example@example.com")
                            .form-group
                                label(for="reg-password") الرقم السرى
                                input#reg-password.form-control(type="password", name="password")
                            .form-group
                                label(for="password2") تأكيد الرقم السرى
